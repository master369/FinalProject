                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" ui-sref="users">Users</a>
            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right ng-cloak">
                    <li ng-show="main.user.isAuthorized">
                        <a>
                            {{main.user.name}}
                        </a>
                    </li>
                    <li ng-show="!main.user.isAuthorized"><a ui-sref="login">Login</a></li>
                    <li ng-show="main.user.isAuthorized"><a ng-click="main.logout()">Logout</a></li>
                    <li ng-show="!main.user.isAuthorized"><a ui-sref="signup">Signup</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container">
        <div ui-view>
        </div>
    </div>
